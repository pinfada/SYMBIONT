{
  "name": "symbiont",
  "version": "1.0.0",
  "description": "Système d'intégration neural pour la gestion des composants",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --config webpack.background.js && webpack --config webpack.config.js",
    "test": "jest",
    "test:ci": "jest --coverage",
    "test:e": "playwright test",
    "test:e2e": "playwright test",
    "test:e2e:serve": "concurrently -k -s first \"npm:serve:dist\" \"wait-on http://localhost:8080/popup.html && npx playwright test\"",
    "lint": "eslint src/**/*.ts",
    "start": "node dist/index.js",
    "check-manifest": "node scripts/check-manifest.js",
    "build:full": "npm run build && npm run check-manifest",
    "serve:dist": "npx serve -l 8080 dist",
    "build:css": "postcss src/popup/index.css -o dist/popup/index.css"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "^0.0.323",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "autoprefixer": "^10.4.21",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "playwright": "^1.52.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^10.1.0",
    "postcss-loader": "^7.3.3",
    "postcss-prefix-selector": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^4.1.8",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
