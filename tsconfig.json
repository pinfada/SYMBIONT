{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "jsx": "react-jsx",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@core/*": ["core/*"],
        "@background/*": ["background/*"],
        "@content/*": ["content/*"],
        "@popup/*": ["popup/*"],
        "@generative/*": ["generative/*"],
        "@behavioral/*": ["behavioral/*"],
        "@types/*": ["types/*"],
        "@shaders/*": ["shaders/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}