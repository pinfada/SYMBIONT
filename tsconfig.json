{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020", "DOM"],
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@core/*": ["core/*"],
        "@background/*": ["background/*"],
        "@content/*": ["content/*"],
        "@popup/*": ["popup/*"],
        "@generative/*": ["generative/*"],
        "@behavioral/*": ["behavioral/*"],
        "@types/*": ["types/*"],
        "@shaders/*": ["shaders/*"],
        "@shared/*": ["shared/*"],
        "@storage/*": ["storage/*"]
      },
      "jsx": "react-jsx"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}