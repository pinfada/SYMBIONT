# Variables d'environnement SYMBIONT - Configuration Développement
# Copier vers .env pour le développement local

# ============================================================================
# SÉCURITÉ (Valeurs développement - CHANGER EN PRODUCTION)
# ============================================================================

# JWT Secrets (valeurs développement uniquement)
JWT_SECRET=dev_jwt_secret_minimum_64_characters_required_for_development_testing_only
JWT_REFRESH_SECRET=dev_refresh_secret_minimum_64_characters_required_for_development_testing_only

# API Keys (valeurs développement uniquement)
SYMBIONT_API_KEY=dev_api_key_32_chars_minimum_dev
ADMIN_API_KEY=dev_admin_key_32_chars_minimum_dev

# Clé de chiffrement (valeur développement uniquement)
ENCRYPTION_KEY=dev_encryption_key_32_chars_minimum

# ============================================================================
# CONFIGURATION APPLICATION
# ============================================================================

# Environnement
NODE_ENV=development

# URLs API
SYMBIONT_API_URL=http://localhost:3001
SYMBIONT_WS_URL=ws://localhost:3001

# Base de données
DATABASE_URL=postgresql://localhost:5432/symbiont_dev
MONGO_URL=mongodb://localhost:27017
DB_NAME=symbiont_dev

# ============================================================================
# CONFIGURATION SERVEUR
# ============================================================================

# Ports
PORT=3001
ADMIN_PORT=8090

# Sécurité CORS
CORS_ORIGIN=http://localhost:3000
ALLOWED_HOSTS=localhost

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================================================
# DÉVELOPPEMENT & DEBUG
# ============================================================================

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_RETENTION_DAYS=7

# Métriques
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# Feature flags développement
USE_REAL_METRICS=false
USE_REAL_DNA=false
USE_REAL_BEHAVIOR=false
USE_BACKEND_API=false
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_PROFILING=true